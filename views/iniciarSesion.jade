extends layout

block content
	.container
		form(method='post', action='contacto/enviar')
			h1 Contacto
			.form_group
			label Nombre
			input.form-control(type='text', name='nombre', placeholder='Ingrese su nombre')
			.form_group
			label Contraseña
			input.form-control(type='password', name='password', placeholder='Ingrese su contraseña')
			.form_group
			button.btn.btn-default(type='submit') Iniciar Sesión
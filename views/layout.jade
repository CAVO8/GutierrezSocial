doctype html
html(lang="es")
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, intiail-scale=1')
		title #{title}: Usuario
		//Bootstrap core CSS
		link(href='stylesheets/bootstrap.min.css', rel='stylesheet')
		// Custom styles for this template
		link(href='stylesheets/starter-template.css', rel='stylesheet')
		link(href='stylesheets/style.css', rel='stylesheet')
	body
		nav.navbar.navbar-inverse.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button',data-toggle='collapse',data-target='#navbar',aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="/") GUTIERREZ SOCIAL
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						li(class=(title === 'Inicio' ? 'active' : ''))
							a(href="/") Inicio
						li(class=(title === 'Contacto' ? 'active' : ''))
							a Usuario:#{usuario}
		block content
		hr
		footer
		p(class='text-center') @2017 Gutierrez Social.
		//placed at the end of the document so the pages losad faster
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
		script(src="javascripts/bootstrap.min.js")